{
    "name": "css-talk",
    "displayName": "CSS Talk",
    "description": "不正確な音声入力をCSSプロパティに変換VS Code拡張",
    "version": "0.0.1",
    "publisher": "your-name",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:css-talk.toggleRegisterMode",
        "onCommand:css-talk.registerLine",
        "onCommand:css-talk.transformToCSS"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@types/node-fetch": "^2.6.12",
        "@types/vscode": "^1.70.0",
        "typescript": "^4.9.5",
        "vscode-test": "^1.5.2"
    },
    "contributes": {
        "configuration": {
            "title": "CSS Talk",
            "properties": {
                "css-talk.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Your personal OpenAI API key"
                }
            }
        },
        "commands": [
            {
                "command": "css-talk.toggleRegisterMode",
                "title": "CSS Talk: 登録モード切り替え"
            },
            {
                "command": "css-talk.registerLine",
                "title": "CSS Talk: 現在行を辞書に登録"
            },
            {
                "command": "css-talk.transformToCSS",
                "title": "CSS Talk: 音声入力テキストをCSSに変換"
            }
        ],
        "keybindings": [
            {
                "command": "css-talk.toggleRegisterMode",
                "key": "cmd+ctrl+shift+r",
                "when": "editorTextFocus"
            },
            {
                "command": "css-talk.registerLine",
                "key": "cmd+ctrl+shift+d",
                "when": "editorTextFocus"
            },
            {
                "command": "css-talk.transformToCSS",
                "key": "cmd+ctrl+shift+e",
                "when": "editorTextFocus"
            }
        ]
    },
    "dependencies": {
        "node-fetch": "^2.7.0"
    }
}